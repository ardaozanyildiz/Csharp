<Page x:Class="IdeaManager.UI.Views.IdeaFormView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Soumettre une idée"
      Background="Gray">

    <StackPanel Margin="20" Width="400">
        <TextBlock Text="Donner une idée" TextAlignment="Center" FontSize="30" Margin="0,0,0,15"/>

        <TextBlock Text="L'idée :" TextAlignment="Center"/>
        <TextBox x:Name="TitleTextBox" Margin="0,5,0,0"/>

        <TextBlock Text="Description :" TextAlignment="Center" Margin="0,15,0,0"/>
        <TextBox x:Name="DescriptionTextBox" AcceptsReturn="True" Height="80" Margin="0,5,0,0"/>

        <Button Content="Envoyer" Margin="0,20,0,0" Height="40" Click="SubmitButton_Click"/>
    </StackPanel>
</Page>
