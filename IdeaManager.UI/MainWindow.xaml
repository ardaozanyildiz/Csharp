        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Idea Manager" Height="400" Width="800"
        Background="Gray">
    <Grid>
        <Frame x:Name="MainFrame2" x:FieldModifier="public" NavigationUIVisibility="Hidden" Margin="10" Visibility="Collapsed" />

        <Button x:Name="GoDashboardButton" Content="Cliquez pour aller sur le Dashboard" Width="332" Height="60" HorizontalAlignment="Center"
